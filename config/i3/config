mode "focus" {
  bindsym b [class="(?i)Firefox"] focus; mode "default"
  bindsym s [class="(?i)slack"] focus; mode "default"
  bindsym m [class="(?i)spotify"] focus; mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+apostrophe mode "focus"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/greg/.bin/i3-power lock, mode "default"
    bindsym e exec --no-startup-id /home/greg/.bin/i3-power logout, mode "default"
    bindsym s exec --no-startup-id /home/greg/.bin/i3-power suspend, mode "default"
    bindsym h exec --no-startup-id /home/greg/.bin/i3-power hibernate, mode "default"
    bindsym r exec --no-startup-id /home/greg/.bin/i3-power reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_system"

